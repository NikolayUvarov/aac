            </role>
          </roles>
          <employees>
            <employee pos="report-admin" head="yes" person="report-admin"/>
          </employees>
          <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
          <!-- Sub-branches for report system -->
          <branches>
            <branch id="report-branch-DEF">
