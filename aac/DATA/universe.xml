        <role name="top-admin-great-magister">
          <funcset id="Tests"/>
          <funcset id="fullUserFuncs"/>
          <funcset id="superFuncs"/>
          <funcset id="branchFuncs"/>
          <funcset id="employementFuncs"/>
          <funcset id="agentFuncs"/>
